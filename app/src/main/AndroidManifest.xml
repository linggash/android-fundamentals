<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.linggash.androidfundamentals" >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidFundamentals"
        tools:targetApi="31" >
        <activity
            android:name=".BasicActivity"
            android:exported="false"
            android:label="@string/title_activity_basic"
            android:theme="@style/Theme.AndroidFundamentals.NoActionBar" />
        <activity
            android:name=".TextAndScrollingView"
            android:label="@string/text_scrolling_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.linggash.androidfundamentals.MainActivity" />
        </activity>
        <activity
            android:name=".InterractiveUi"
            android:label="@string/_interractive_ui"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.linggash.androidfundamentals.MainActivity" />
        </activity>
        <activity
            android:name=".HelloWorld"
            android:label="@string/hello_world"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.linggash.androidfundamentals.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>